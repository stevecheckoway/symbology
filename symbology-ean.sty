	\or       \sy@ean@lsymbol1411% 3
	\or       \sy@ean@lsymbol1132% 4
	\or       \sy@ean@lsymbol1231% 5
	\or       \sy@ean@lsymbol1114% 6
	\or       \sy@ean@lsymbol1312% 7
	\or       \sy@ean@lsymbol1213% 8
	\else     \sy@ean@lsymbol3112% 9
	\fi
}

