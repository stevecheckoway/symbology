	\or       \sy@ean@lsymbol2212% 2
	\or       \sy@ean@lsymbol1141% 3
	\or       \sy@ean@lsymbol2311% 4
	\or       \sy@ean@lsymbol1321% 5
	\or       \sy@ean@lsymbol4111% 6
	\or       \sy@ean@lsymbol2131% 7
